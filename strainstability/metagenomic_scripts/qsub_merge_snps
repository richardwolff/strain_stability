. /u/local/Modules/default/init/modules.sh

module load singularity

host=ao

export MIDAS_DB=/u/project/ngarud/rwolff/midas_isolate_db_built/${host}

OUTDIR=/u/scratch/r/rwolff/Poyet_midas_output/merged_midas_output/${host}

singularity exec $H2_CONTAINER_LOC/MIDAS-1.3.2.sif merge_midas.py snps $OUTDIR/snps -i /u/scratch/r/rwolff/Poyet_midas_output/midas_files/${host}/ -t dir --sample_depth 5 --site_depth 3 --min_samples 1 --site_prev 0.0 --threads 10 > $OUTDIR/snps/species.log

singularity exec $H2_CONTAINER_LOC/MIDAS-1.3.2.sif merge_midas.py genes $OUTDIR/genes -i /u/scratch/r/rwolff/Poyet_midas_output/midas_files/${host}/ -t dir --sample_depth 5 --min_samples 1 > $OUTDIR/genes/species.log






